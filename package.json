{
  "name": "math-whiteboard-demo",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:https": "VITE_DEV_HTTPS=1 vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "audit:visual": "node scripts/visual-audit.mjs",
    "audit:contracts": "node scripts/visual-contract-audit.mjs",
    "audit:contrast": "node scripts/visual-contrast-audit.mjs",
    "audit:visual-performance": "node scripts/visual-performance-audit.mjs",
    "audit:reliability": "node scripts/reliability-slo-gate.mjs",
    "audit:i18n": "node scripts/i18n-hardcoded-audit.mjs",
    "audit:i18n:strict": "node scripts/i18n-hardcoded-audit.mjs --strict",
    "smoke:network": "node scripts/reliability-network-smoke.mjs",
    "smoke:visual": "node scripts/visual-smoke-static.mjs",
    "smoke:cross-browser": "node scripts/smoke-cross-browser.mjs",
    "smoke:modal-mobile": "node scripts/modal-smoke-mobile.mjs",
    "visual:matrix": "node scripts/visual-regression-matrix.mjs",
    "visual:capture": "node scripts/visual-capture.mjs",
    "visual:baseline": "npm run visual:matrix && VISUAL_CAPTURE_TARGET=baseline node scripts/visual-capture.mjs",
    "visual:current": "npm run visual:matrix && node scripts/visual-capture.mjs",
    "visual:diff": "node scripts/visual-diff-check.mjs",
    "visual:gate": "npm run build && npm run visual:matrix && VISUAL_CAPTURE_STRICT=1 node scripts/visual-capture.mjs && VISUAL_DIFF_STRICT=1 npm run visual:diff && npm run audit:visual-performance",
    "portfolio:export": "node ../portfolio/scripts/export-showcases.mjs",
    "verify": "npm run lint && npm run audit:visual && npm run audit:contracts && npm run audit:contrast && npm run smoke:visual && npm run visual:matrix && npm run visual:diff && npm run build && npm run audit:visual-performance && npm run audit:i18n",
    "preview": "vite preview",
    "dev:showcase": "vite --mode showcase --open /workbook",
    "build:showcase": "vite build --mode showcase"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "last 2 versions",
      "Firefox ESR",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "jspdf": "^4.1.0",
    "jszip": "^3.10.1",
    "mathjs": "^15.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-basic-ssl": "^2.1.4",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "sass-embedded": "^1.97.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
